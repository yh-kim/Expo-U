<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#1a1a1a">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/activity_back"
            android:id="@+id/booth_detail_back"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="248dp"
            android:textSize="16sp"
            android:textColor="#ced2d3"
            android:text="부스 이름"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/booth_detail_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <!--
            -->
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="#1a1a1a"
                android:id="@+id/booth_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                >
                <TextView
                    android:text="조회수 : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    />
                <TextView
                    android:id="@+id/booth_detail_clicknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/booth_detail_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                >
            </ImageView>

            <TextView
                android:layout_marginTop="14dp"
                android:id="@+id/booth_detail_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                />
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/booth_youtube"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/line"
        >
    </ImageView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="110dp"
                android:layout_height="110dp"
                />
            <ImageView
                android:id="@+id/imageView02"
                android:layout_width="110dp"
                android:layout_height="110dp"
                />
            <ImageView
                android:id="@+id/imageView03"
                android:layout_width="110dp"
                android:layout_height="110dp"
                />
            <ImageView
                android:id="@+id/imageView04"
                android:layout_width="110dp"
                android:layout_height="110dp"
                />
            <ImageView
                android:id="@+id/imageView05"
                android:layout_width="110dp"
                android:layout_height="110dp"
                />
            <ImageView
                android:id="@+id/imageView06"
                android:layout_width="110dp"
                android:layout_height="110dp"
                />

        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"

        android:background="@drawable/line"
        >
    </ImageView>


    <ImageView
        android:id="@+id/booth_detail_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:src="@drawable/expo_love"/>
    <TextView
        android:id="@+id/booth_detail_love_num"
        android:text="2045"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        />
    <RelativeLayout
        android:layout_width="346dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box"
        >
        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="115.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/booth_detail_expo_num"
                    android:text="16"
                    android:textSize="22sp"
                    android:textColor="#eeeeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/my_expo"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="박람회"
                        android:textColor="#eeeeee"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line2"
                android:layout_marginTop="6dp"
                />
            <LinearLayout
                android:layout_width="115.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/booth_detail_content_num"
                    android:text="27"
                    android:textSize="22sp"
                    android:textColor="#eeeeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="11dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/my_contents"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="컨텐츠"
                        android:textColor="#eeeeee"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/line2"
                android:layout_marginTop="6dp"
                />
            <LinearLayout
                android:layout_width="115.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/booth_detail_market_num"
                    android:text="112"
                    android:textSize="22sp"
                    android:textColor="#eeeeee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="11dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/my_market"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="마켓"
                        android:textColor="#eeeeee"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
        </LinearLayout>

</ScrollView>
</LinearLayout>